<Window x:Class="library_management_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="도서 관리 시스템"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#00796B" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="📚" FontSize="32" VerticalAlignment="Center" Margin="0,0,16,0"/>
                <TextBlock Grid.Column="1" Text="도서 관리 시스템" FontSize="24" FontWeight="Medium" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="2" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='yyyy-MM-dd'}"
                           VerticalAlignment="Center" FontSize="14" Foreground="White" Opacity="0.7"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="16">
            <TabItem Header="HOME">
                <Grid Margin="16" />
            </TabItem>
            <TabItem Header="도서 관리">
                <Grid Margin="16">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="새 도서 추가" Width="120" Height="36" Margin="0,0,8,0" Click="Add_book"/>
                        <Button Content="도서 수정" Width="100" Height="36" Margin="0,0,8,0" Click="Modify_book"/>
                        <Button Content="도서 삭제" Width="100" Height="36" Margin="0,0,16,0" Click="Delete_book"/>
                        <TextBox Width="300" Height="36" Margin="0,0,8,0" />
                        <Button Content="검색" Width="75" Height="36" Click="Search_book"/>
                        <Button Content="새로고침" Width="75" Height="36" Margin="8,0,0,0" Click="Refresh"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="True" IsReadOnly="True" />
                </Grid>
            </TabItem>
            <TabItem Header="회원 관리" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="69">
                <Grid Margin="16">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="새 회원 추가" Width="120" Height="36" Margin="0,0,8,0" Click="Add_Member"/>
                        <Button Content="회원 수정" Width="100" Height="36" Margin="0,0,8,0"/>
                        <Button Content="회원 삭제" Width="100" Height="36" Margin="0,0,16,0"/>
                        <Button Content="탈퇴 회원 조회" Width="144" Height="36" Foreground="Red" BorderBrush="Red" Click="ResignedMember_Click"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="대출 관리">
                <Grid Margin="16">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="도서 대출" Width="120" Height="36" Margin="0,0,8,0" Click="loan_book"/>
                        <Button Content="도서 반납" Width="120" Height="36" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
