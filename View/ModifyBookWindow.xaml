<Window x:Class="library_management_system.ModifyBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library_management_system"
        xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="도서 수정"
        Height="600"
        Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="White"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="{StaticResource DefaultFontFamily}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DatePicker.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 이미지 경로 변환기 -->
            <local:ImagePathConverter x:Key="ImagePathConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <mdi:Card Grid.Row="0" Padding="16" Margin="0,0,0,36" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal">
                <mdi:PackIcon Kind="BookEdit" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,16,0" />
                <TextBlock Text="도서 정보 수정" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" />
            </StackPanel>
        </mdi:Card>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Height="893">
                <!-- 제목 -->
                <TextBox x:Name="TitleTextBox"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="도서 제목"
                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,10,0,16"
                         FontSize="16" />

                <!-- 저자 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="저자"
                         Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- 출판사 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="출판사"
                         Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- ISBN -->
                <Grid>
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                        mdi:HintAssist.Hint="ISBN"
                        Text="{Binding ISBN, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,122,16"
                        FontSize="16" />
                    <Button Margin="326,28,10,43"
                   Content="중복확인"
                   Click="wndqhr_click"
                   Style="{DynamicResource MaterialDesignRaisedButton}">
                    </Button>
                </Grid>

                <!-- 가격 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="가격"
                         Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20"
                         FontSize="16" />

                <!-- 이미지 선택 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="이미지 선택"
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                            Width="120"
                            Height="40"
                            Margin="0,0,16,0"
                            Click="SelectImage_Click" />
                    <TextBlock Text="{Binding ImagePath}"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="200" />
                </StackPanel>

                <!-- 이미지 미리보기 -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Background="LightGray"
                        Height="150"
                        Margin="0,0,0,16">
                    <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality" />
                </Border>

                <!-- 도서 설명 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="도서 설명"
                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"
                         FontSize="16" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <mdi:Card Grid.Row="2" Padding="16" Margin="0,20,0,0" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="취소"
                        Style="{DynamicResource MaterialDesignOutlinedButton}"
                        Width="100"
                        Height="40"
                        Margin="0,0,16,0"
                        Click="CancelButton_Click" />
                <Button Content="수정"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Width="100"
                        Height="40"
                        Click="UpdateButton_Click" />
            </StackPanel>
        </mdi:Card>
    </Grid>
</Window> 