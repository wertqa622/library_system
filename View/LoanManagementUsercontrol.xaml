<UserControl x:Class="library_management_system.View.LoanManagementUsercontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:library_management_system.View" xmlns:viewmodels="clr-namespace:library_management_system.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:LoanManagementViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d"
             xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="653" d:DesignWidth="1532"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DatePicker.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TabControl.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--데이터그리드 속성 스타일-->
            <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="White" />

                <Setter Property="BorderBrush" Value="#E0E0E0" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="GridLinesVisibility" Value="Horizontal" />
                <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0" />
                <Setter Property="RowBackground" Value="White" />
                <Setter Property="AlternatingRowBackground" Value="#FAFAFA" />
                <Setter Property="SelectionMode" Value="Single" />
                <Setter Property="CanUserResizeRows" Value="False" />
                <Setter Property="CanUserSortColumns" Value="True" />
                <Setter Property="AutoGenerateColumns" Value="False" />
                <Setter Property="HeadersVisibility" Value="Column" />
                <Setter Property="RowHeight" Value="48" />
                <Setter Property="ColumnHeaderHeight" Value="56" />
                <Setter Property="SelectionUnit" Value="FullRow" />
            </Style>

            <!-- 커스텀 DataGridColumnHeader 스타일 -->
            <Style x:Key="CustomDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Background" Value="#F8F9FA" />
                <Setter Property="BorderBrush" Value="#E0E0E0" />
                <Setter Property="BorderThickness" Value="0,0,1,0" />
                <Setter Property="Foreground" Value="#495057" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="12,16" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>

            <!-- 커스텀 DataGridCell 스타일 -->
            <Style x:Key="CustomDataGridCellStyle" TargetType="DataGridCell">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 커스텀 DataGridTextColumn 스타일 -->
            <Style x:Key="CustomDataGridTextColumnStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#212529" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                <Setter Property="Margin" Value="0" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">

            <mdi:Card Padding="8" Margin="0,0,16,0" mdi:ElevationAssist.Elevation="Dp1" xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                          Width="120" Height="40" FontSize="16"
                          Padding="8,0" VerticalContentAlignment="Center"
                          ItemsSource="{Binding LoanSearchFilters}"
                          SelectedItem="{Binding SelectedLoanSearchFilter}"
                          mdi:ButtonAssist.CornerRadius="4" />

                    <TextBox Grid.Column="1"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         Width="250" Height="40" FontSize="16"
                         Padding="8,0" VerticalAlignment="Center"
                         Foreground="Black"
                         mdi:HintAssist.Hint="검색어를 입력하세요"
                         Text="{Binding LoanSearchText, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchLoanCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="2"
                        Command="{Binding SearchLoanCommand}"
                        Style="{DynamicResource MaterialDesignIconButton}"
                        Width="36" Height="36" Margin="8,0,0,0">
                        <mdi:PackIcon Kind="Magnify" Width="20" Height="20" />
                    </Button>
                </Grid>
            </mdi:Card>

            <Button Style="{DynamicResource MaterialDesignIconButton}"
                Command="{Binding RefreshLoanCommand}"
                Width="36" Height="36">
                <mdi:PackIcon Kind="Refresh" Width="20" Height="20" />
            </Button>
        </StackPanel>
        <DataGrid Grid.Row="1"
                    ItemsSource="{Binding Loans}"
                  SelectedItem="{Binding SelectedLoan}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Style="{DynamicResource CustomDataGridStyle}"
                  ColumnHeaderStyle="{DynamicResource CustomDataGridColumnHeaderStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="이름"
                        Binding="{Binding Name}"
                        Width="190"
                        ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
                <DataGridTextColumn Header="전화번호"
                        Binding="{Binding PhoneNumber}"
                        Width="250"
                        ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
                <DataGridTextColumn Header="ISBN"
                        Binding="{Binding Isbn}"
                        Width="350"
                        ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
                <DataGridTextColumn Header="대여일"
                        Binding="{Binding LoanDate}"
                        Width="220"
                        ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
                <DataGridTextColumn Header="반납예정일"
                        Binding="{Binding DueDate, StringFormat=yyyy-MM-dd}"
                        Width="220"
                        ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
                <DataGridTextColumn Header="반납일"
                        Binding="{Binding ReturnDate, StringFormat=yyyy-MM-dd}"
                        Width="200"
                        ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
                <DataGridTextColumn Header="반납 상태"
                          Binding="{Binding LoanStatus}"
                          Width="100"
                          ElementStyle="{DynamicResource CustomDataGridTextColumnStyle}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>