<Window x:Class="library_management_system.View.Book_Info"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:library_management_system"
            xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
            WindowStyle="None"
            mc:Ignorable="d"
            Title="도서 정보"
            Height="600"
            Width="1000"
            WindowStartupLocation="CenterScreen"
            ResizeMode="NoResize"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            Background="White"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextElement.FontFamily="{StaticResource DefaultFontFamily}"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DatePicker.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:ImagePathConverter x:Key="ImagePathConverter" />
            <local:ImageByteArrayConverter x:Key="ImageByteArrayConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <mdi:Card Grid.Row="0" Padding="16" Margin="0,0,0,28" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal">
                <mdi:PackIcon Kind="BookOpen" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,16,0" />
                <TextBlock Text="도서 정보" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" />
            </StackPanel>
        </mdi:Card>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*" />
                <ColumnDefinition Width="57*" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="LightGray" BorderThickness="1">
                <Image Source="{Binding BookImage, Converter={StaticResource ImageByteArrayConverter}}"
    Stretch="Uniform"
    RenderOptions.BitmapScalingMode="HighQuality" />
            </Border>
            <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 제목 -->
                    <TextBox x:Name="TitleTextBox"
                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 mdi:HintAssist.Hint="도서 제목"
                 IsReadOnly="True"
                 Text="{Binding BookName}"
                 Margin="0,10,0,16"
                 FontSize="16" />

                    <!-- 저자 -->
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 mdi:HintAssist.Hint="저자"
                 Text="{Binding Author}"
                 Margin="0,0,0,16"
                 IsReadOnly="True"
                 FontSize="16" />

                    <!-- ISBN -->
                    <Grid>
                        <TextBox x:Name="isbntxt"
                     Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                     mdi:HintAssist.Hint="ISBN"
                     Text="{Binding ISBN}"
                     Margin="0,0,0,16"
                     IsReadOnly="True"
                     FontSize="16" />
                    </Grid>

                    <!-- 출판사 -->
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 mdi:HintAssist.Hint="출판사"
                 Text="{Binding Publisher}"
                 Margin="0,0,0,16"
                 IsReadOnly="True"
                 FontSize="16" />

                    <!-- 가격 -->
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 mdi:HintAssist.Hint="가격"
                 Text="{Binding Price}"
                 Margin="0,0,0,16"
                 IsReadOnly="True"
                 FontSize="16" />
                    <!-- URL -->
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 mdi:HintAssist.Hint="도서 URL"
                 Text="{Binding BookUrl}"
                 IsReadOnly="True"
                 Margin="0,0,0,16"
                 FontSize="16" />

                    <!-- 설명 -->
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                 mdi:HintAssist.Hint="도서 설명"
                 Text="{Binding Description}"
                 Height="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,16"
                 IsReadOnly="True"
                 FontSize="16" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Buttons -->
        <mdi:Card Grid.Row="2" Padding="16" Margin="0,20,0,0" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="닫기"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Click="bookinfo_close"
                        Width="100"
                        Height="40" />
            </StackPanel>
        </mdi:Card>
    </Grid>
</Window>