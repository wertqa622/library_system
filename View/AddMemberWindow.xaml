<Window x:Class="library_management_system.View.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library_management_system"
        xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStyle="None"
        mc:Ignorable="d"

        Title="새 도서 추가"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="White"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="{StaticResource DefaultFontFamily}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <ResourceDictionary>
            <local:ImagePathConverter x:Key="ImagePathConverter" />
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DatePicker.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <mdi:Card Grid.Row="0" Padding="16" Margin="0,0,0,28" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal">
                <mdi:PackIcon Kind="BookPlus" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,16,0" />
                <TextBlock Text="새 회원 정보 입력" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" />
            </StackPanel>
        </mdi:Card>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 이름 -->
                <TextBox x:Name="TitleTextBox"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="회원 이름"
                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,16,0,16"
                         FontSize="16" />

                <!-- 생년월일 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="생년월일"
                         Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="성별"
                         Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- 전번 -->
                <Grid>
                    <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="전화번호"
                         Text="{Binding ISBN, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,107,16"
                         FontSize="16" />
                    <Button Margin="341,16,10,31"
                            Content="중복확인"
                            Click="wndqhr_click"
                            Style="{DynamicResource MaterialDesignRaisedButton}">
                    </Button>
                </Grid>

                <!-- 이메일 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="이메일 주소"
                         Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="이미지 선택"
            Style="{DynamicResource MaterialDesignOutlinedButton}"
            Width="120"
            Height="40"
            Margin="0,0,16,0"
            Click="SelectImage_Click" />
                    <TextBlock Text="{Binding ImagePath}"
               VerticalAlignment="Center"
               Foreground="Gray"
               TextTrimming="CharacterEllipsis"
               MaxWidth="200" />
                </StackPanel>

                <!-- 이미지 미리보기 -->
                <Border BorderBrush="Gray"
        BorderThickness="1"
        Background="LightGray"
        Height="150"
        Margin="0,0,0,16">
                    <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
           Stretch="Uniform"
           RenderOptions.BitmapScalingMode="HighQuality" />
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <mdi:Card Grid.Row="2" Padding="16" Margin="0,20,0,0" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="취소"
                        Style="{DynamicResource MaterialDesignOutlinedButton}"
                        Width="100"
                        Height="40"
                        Margin="0,0,16,0"
                        Click="CancelButton_Click" />
                <Button Content="추가"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Width="100"
                        Height="40"
                        Click="AddButton_Click" />
            </StackPanel>
        </mdi:Card>
    </Grid>
</Window> 