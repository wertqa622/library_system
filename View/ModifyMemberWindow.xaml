<Window x:Class="library_management_system.View.ModifyMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library_management_system"
        xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStyle="None"
        mc:Ignorable="d"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="White"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="{StaticResource DefaultFontFamily}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <ResourceDictionary>
            <local:ImagePathConverter x:Key="ImagePathConverter" />
            <local:ImageByteArrayConverter x:Key="ImageByteArrayConverter" />
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DatePicker.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <mdi:Card Grid.Row="0" Padding="16" Margin="0,0,0,28" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal">
                <mdi:PackIcon Kind="BookPlus" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,16,0" />
                <TextBlock Text="회원 정보 수정" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" />
            </StackPanel>
        </mdi:Card>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 이름 -->
                <TextBox x:Name="NameTextBox"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="회원 이름"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,16,0,16"
                         FontSize="16" />

                <!-- 생년월일 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="생년월일"
                         Text="{Binding Birthdaydate, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- 성별 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="성별"
                         Text="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- 전화번호 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="전화번호"
                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- 이메일 -->
                <TextBox Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         mdi:HintAssist.Hint="이메일 주소"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16"
                         FontSize="16" />

                <!-- 사진 선택 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="사진 선택"
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                            Width="120"
                            Height="40"
                            Margin="0,0,16,0"
                            Click="SelectPhoto_Click" />
                </StackPanel>

                <!-- 사진 미리보기 -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Background="LightGray"
                        Height="150"
                        Margin="0,0,0,16">
                    <Image Source="{Binding PhotoBytes, Converter={StaticResource ImageByteArrayConverter}}"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality" />
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <mdi:Card Grid.Row="2" Padding="16" Margin="0,20,0,0" mdi:ElevationAssist.Elevation="Dp2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="취소"
                        Style="{DynamicResource MaterialDesignOutlinedButton}"
                        Width="100"
                        Height="40"
                        Margin="0,0,16,0"
                        Click="CancelButton_Click" />
                <Button Content="수정"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Width="100"
                        Height="40"
                        Command="{Binding UpdateMemberCommand}" />
            </StackPanel>
        </mdi:Card>
    </Grid>
</Window> 